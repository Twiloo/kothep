            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Label>
         <TextField fx:id="username" layoutX="120.0" layoutY="109.0" promptText="Username" />
         <Label layoutX="35.0" layoutY="154.0" text="E-mail" textFill="#fbc027">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Label>
